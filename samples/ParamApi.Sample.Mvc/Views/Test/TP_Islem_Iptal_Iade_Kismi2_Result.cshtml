            });
        }
        
        function showToast(message, type) {
            // Simple toast notification
            var toast = $('<div class="toast-notification toast-' + type + '">' + message + '</div>');
            $('body').append(toast);
            
            setTimeout(function() {
                toast.fadeOut(function() {
                    $(this).remove();
                });
            }, 3000);
        }
    </script>
    
    <style>
        .toast-notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 10px 20px;
