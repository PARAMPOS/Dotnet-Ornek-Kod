@model BIN_SanalPos_TestModel
@{
    ViewData["Title"] = "BIN_SanalPos - BIN Sorgulama";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <partial name="_TestSidebar" />
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-credit-card me-2"></i>
                        BIN_SanalPos - BIN Sorgulama
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle me-1"></i> Servis Bilgileri</h6>
                        <ul class="mb-0">
                            <li><strong>Ama√ß:</strong> Kredi kartƒ± BIN bilgilerini sorgulama</li>
                            <li><strong>Metod:</strong> BIN_SanalPos</li>
                            <li><strong>Parametreler:</strong> BIN (6-8 hane, opsiyonel)</li>
                            <li><strong>D√∂n√º≈ü:</strong> Banka bilgileri, kart tipi, SanalPOS_ID</li>
                        </ul>
                    </div>

                    <form asp-action="BIN_SanalPos" method="post" id="binForm">
                        @Html.AntiForgeryToken()
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="BIN" class="form-label">
                                        <i class="fas fa-hashtag me-1"></i>
                                        @Html.DisplayNameFor(m => m.BIN)
                                    </label>
                                    <input asp-for="BIN" class="form-control" type="text" 
                                           placeholder="540667 (6 hane) veya 54066701 (8 hane)"
                                           maxlength="8" />
                                    <span asp-validation-for="BIN" class="text-danger"></span>
                                    <div class="form-text">
                                        Bo≈ü bƒ±rakƒ±lƒ±rsa t√ºm BIN'ler listelenir. 6 veya 8 haneli olmalƒ±dƒ±r.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- √ñrnek BIN Deƒüerleri -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="fas fa-clipboard-list me-1"></i>
                                    √ñrnek BIN Deƒüerleri
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>6 Haneli BIN'ler:</h6>
                                        <div class="row g-2">
                                            @foreach (var bin in BIN_SanalPos_TestModel.Sample6DigitBins)
                                            {
                                                <div class="col-12">
                                                    <button type="button" class="btn btn-outline-primary btn-sm w-100 text-start bin-btn"
                                                            data-bin="@bin.BIN">
                                                        <strong>@bin.BIN</strong> - @bin.BankName
                                                    </button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h6>8 Haneli BIN'ler:</h6>
                                        <div class="row g-2">
                                            @foreach (var bin in BIN_SanalPos_TestModel.Sample8DigitBins)
                                            {
                                                <div class="col-12">
                                                    <button type="button" class="btn btn-outline-success btn-sm w-100 text-start bin-btn"
                                                            data-bin="@bin.BIN">
                                                        <strong>@bin.BIN</strong> - @bin.BankName
                                                    </button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mt-3">
                                    <button type="button" class="btn btn-outline-secondary btn-sm" id="clearBinBtn">
                                        <i class="fas fa-list me-1"></i>
                                        T√ºm BIN'leri Listele (BIN alanƒ±nƒ± bo≈ü bƒ±rak)
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-success btn-lg" id="submitBtn">
                                    <i class="fas fa-search me-2"></i>
                                    BIN Bilgilerini Sorgula
                                </button>
                                <button type="button" class="btn btn-secondary btn-lg ms-2" onclick="resetForm()">
                                    <i class="fas fa-undo me-2"></i>
                                    Temizle
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- BIN Bilgi Kartƒ± -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-question-circle me-1"></i>
                        BIN Sorgulama Hakkƒ±nda
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>üîç BIN Nedir?</h6>
                            <ul class="list-unstyled small">
                                <li>‚Ä¢ Bank Identification Number</li>
                                <li>‚Ä¢ Kredi kartƒ±nƒ±n ilk 6-8 hanesi</li>
                                <li>‚Ä¢ Kartƒ±n hangi bankaya ait olduƒüunu g√∂sterir</li>
                                <li>‚Ä¢ Kart tipi bilgisini i√ßerir (Visa, MasterCard, vb.)</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>üìä D√∂n√º≈ü Bilgileri</h6>
                            <ul class="list-unstyled small">
                                <li>‚Ä¢ Banka adƒ± ve kodu</li>
                                <li>‚Ä¢ Kart markasƒ± (Visa, MasterCard, vb.)</li>
                                <li>‚Ä¢ Kart tipi (Debit, Credit, vb.)</li>
                                <li>‚Ä¢ SanalPOS_ID bilgisi</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // BIN se√ßimi
            $('.bin-btn').click(function() {
                const bin = $(this).data('bin');
                $('#BIN').val(bin);
                
                $('.bin-btn').removeClass('btn-primary btn-success').addClass('btn-outline-primary btn-outline-success');
                $(this).removeClass('btn-outline-primary btn-outline-success').addClass('btn-primary');
            });

            // T√ºm BIN'leri listele
            $('#clearBinBtn').click(function() {
                $('#BIN').val('');
                $('.bin-btn').removeClass('btn-primary btn-success').addClass('btn-outline-primary btn-outline-success');
                $(this).removeClass('btn-outline-secondary').addClass('btn-secondary');
            });

            // BIN input formatlamasƒ±
            $('#BIN').on('input', function() {
                let value = $(this).val().replace(/\D/g, ''); // Sadece rakamlar
                if (value.length > 8) {
                    value = value.substring(0, 8);
                }
                $(this).val(value);
                
                // BIN butonlarƒ±nƒ± sƒ±fƒ±rla
                $('.bin-btn').removeClass('btn-primary btn-success').addClass('btn-outline-primary btn-outline-success');
                $('#clearBinBtn').removeClass('btn-secondary').addClass('btn-outline-secondary');
            });

            // Form validasyonu
            $('#binForm').on('submit', function(e) {
                const bin = $('#BIN').val().trim();
                
                if (bin && (bin.length < 6 || bin.length > 8)) {
                    e.preventDefault();
                    alert('BIN deƒüeri 6 veya 8 haneli olmalƒ±dƒ±r.');
                    return false;
                }
                
                $('#submitBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Sorgulanƒ±yor...');
            });
        });

        function resetForm() {
            document.getElementById('binForm').reset();
            $('.bin-btn').removeClass('btn-primary btn-success').addClass('btn-outline-primary btn-outline-success');
            $('#clearBinBtn').removeClass('btn-secondary').addClass('btn-outline-secondary');
        }
    </script>
} 