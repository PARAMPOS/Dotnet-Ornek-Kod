                                                <th>SanalPOS ID</th>
                                                <th>1T (%)</th>
                                                <th>2T (%)</th>
                                                <th>3T (%)</th>
                                                <th>6T (%)</th>
                                                <th>9T (%)</th>
                                                <th>12T (%)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var oran in Model.Response.OzelOranBilgileri)
                                            {
                                                <tr>
                                                    <td><strong>@oran.Kredi_Karti_Banka</strong></td>
                                                    <td><span class="badge bg-secondary">@oran.SanalPOS_ID</span></td>
                                                    <td>@(oran.MO_01 ?? "-")</td>
                                                    <td>@(oran.MO_02 ?? "-")</td>
                                                    <td>@(oran.MO_03 ?? "-")</td>
                                                    <td>@(oran.MO_06 ?? "-")</td>
                                                    <td>@(oran.MO_09 ?? "-")</td>
                                                    <td>@(oran.MO_12 ?? "-")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> Response bilgisi alƒ±namadƒ±.
                        </div>
                    }
                </div>
            </div>

            <!-- Raw JSON Response -->
